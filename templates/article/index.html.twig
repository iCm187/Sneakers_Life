{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1 class="text-white text-center myTitle mb-5">Article</h1>

	<table class="table text-white">
		<thead>
			<tr>
				<th>Date_publication</th>
				<th>Titre</th>
				<th>Contenu</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.datePublication ? article.datePublication|date('d-m-Y') : '' }}</td>
					<td>{{ article.titre }}</td>
					<td>{{ article.contenu }}</td>
					<td>
						<a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
					</td>
					{% if app.user %}
						<td>
							<a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
						</td>
					{% endif %}
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
