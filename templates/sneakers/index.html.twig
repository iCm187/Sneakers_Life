{% extends 'base.html.twig' %}

{% block title %}Les actualités sneakers
{% endblock %}

{% block body %}
	<div class="bg-black pt-5" style="min-height: 100vh;background-color: black;">
		<h1 class="text-white text-center myTitle mb-5">
			Les nouveautés sneakers
		</h1>

		{% if sneakers is defined and sneakers|length %}
			<div class="row row-cols-1 row-cols-md-4 g-4 px-3 m-4">
				{% for sneaker in sneakers %}
					<div class="col">
						<div class="card h-100">
							<img src="{{ asset('build/images/' ~ sneaker.images) }}">
							<div class="card-body">
								<h2 class="card-title fs-4">{{ sneaker.name }}</h2>
								<p>
									<a class="text-black btn btn-success p-2 w-100" href="{{ path('app_sneakers_show', {'id': sneaker.id}) }}">Voir l'article</a>
									<a class="btn btn-light" href="#">
										<i class="btn btn-success p-4 w-100">Cop</i>
									</a>
								</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p class="text-white text-center">Aucune chaussure trouvée</p>
		{% endif %}
	</div>
{% endblock %}
